# CloudOps-SRE-Toolkit Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_SESSION_TOKEN=your_session_token_if_using_temp_credentials

# =============================================================================
# Azure Configuration
# =============================================================================
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_service_principal_client_id
AZURE_CLIENT_SECRET=your_azure_service_principal_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# =============================================================================
# Google Cloud Platform Configuration
# =============================================================================
GCP_PROJECT_ID=your_gcp_project_id
GCP_BILLING_ACCOUNT_ID=your_gcp_billing_account_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# =============================================================================
# Notification Configuration
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR-TEAMS-WEBHOOK
ALERT_WEBHOOK_URL=https://your-alerting-system.com/webhook

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=CloudOps-SRE-Toolkit <your_email@gmail.com>
EMAIL_TO=devops-team@yourcompany.com,alerts@yourcompany.com

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_GATEWAY=http://prometheus-pushgateway:9091
GRAFANA_URL=http://grafana:3000
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_API_KEY=your_new_relic_api_key

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cloudops_toolkit
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_ENCRYPTION_KEY=your_32_character_encryption_key_here
VAULT_ADDR=https://your-vault-server.com
VAULT_TOKEN=your_vault_token

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/cloudops-toolkit/

# =============================================================================
# Script Configuration
# =============================================================================
# Default timeouts and thresholds
DEFAULT_TIMEOUT_SECONDS=30
DEFAULT_RETRY_COUNT=3
DEFAULT_WARNING_THRESHOLD=80
DEFAULT_CRITICAL_THRESHOLD=95

# Cost optimization defaults
COST_ANALYSIS_DAYS=30
COST_ALERT_THRESHOLD=1000

# Kubernetes defaults
KUBECONFIG_PATH=/path/to/your/kubeconfig
K8S_NAMESPACE=default

# Security scanning defaults
SECURITY_SCAN_THREADS=10
SSL_WARNING_DAYS=30
SSL_CRITICAL_DAYS=7

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=false
TEST_MODE=false
DRY_RUN=false

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_MACHINE_LEARNING=false
ENABLE_PREDICTIVE_ALERTS=false
